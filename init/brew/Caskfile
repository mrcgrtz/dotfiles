tap 'homebrew/cask-versions'

# Install Cask apps to the system wide Application directory.
cask_args appdir: '/Applications'

# Install apps from the Mac App Store using mas.
brew 'mas'

# Install IDEs and dev-related tools.
cask 'visual-studio-code'
cask 'sublime-text'
cask 'iterm2'
cask 'transmit'
cask 'sequel-ace'
cask 'mamp'
mas 'Xcode', id: 497799835

# Install browsers.
cask 'safari-technology-preview'
cask 'firefox-developer-edition'
cask 'google-chrome-canary'
cask 'microsoft-edge-dev'
cask 'choosy'

# Install chat apps.
cask 'slack'
cask 'whatsapp'
cask 'telegram'
cask 'zoomus'

# Install security apps.
cask 1password
mas '1Blocker', id: 1365531024
cask 'gpg-suite'
cask 'little-snitch'
cask 'micro-snitch'

# Install office-related software.
mas 'Pages', id: 409201541
mas 'Numbers', id: 409203825
mas 'Keynote', id: 409183694
cask musescore

# Install design and image processing apps.
mas 'Affinity Designer', id: 824171161
mas 'Pixelmator Pro', id: 1289583905
cask 'xscope'
cask 'imageoptim'

# Install misc. apps.
cask 'alfred'
cask 'flux'
cask 'bartender'
cask 'istat-menus'
cask 'keyboard-maestro'
cask 'a-better-finder-rename'
cask 'kap'
cask 'the-unarchiver'
cask 'timemachineeditor'
cask 'appcleaner'
mas 'Ivory', id: 6444602274
mas 'Reeder', id: 880001334
mas 'Things', id: 904280696
mas 'Moom', id: 419330170
mas 'Dato', id: 1470584107
mas 'Lungo', id: 1263070803
mas 'PopClip', id: 445189367
mas 'Battery Indicator', id: 1206020918

# Install Quicklook plugins.
cask 'qlcolorcode' # Preview source code files with syntax highlighting
cask 'qlmarkdown' # Preview Markdown files
cask 'qlstephen' # Preview plain text files without or with unknown file extension. Example: CHANGELOG, index.styl, etc.
cask 'quicklook-json' # Preview JSON files
cask 'webpquicklook' # Preview WebP images
cask 'quicklookase' # Preview Adobe ASE Color Swatches generated with Adobe Photoshop and many others

# Install screensavers.
cask 'boinc'
cask 'aerial'
cask 'pongsaver'

# Install fonts.
tap 'homebrew/cask-fonts'
cask 'font-fira-code'
cask 'font-fira-sans'
cask 'font-hack'
cask 'font-inter'
cask 'font-open-sans'
cask 'font-opendyslexic'
cask 'font-vollkorn'
