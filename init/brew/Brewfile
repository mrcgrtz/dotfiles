tap 'homebrew/core'
tap 'homebrew/bundle'

# Install GNU core utilities (those that come with macOS are outdated).
brew 'coreutils'
# Donâ€™t forget to add $(brew --prefix coreutils)/libexec/gnubin to $PATH.

# Install some other useful utilities like `sponge`.
brew 'moreutils'

# Install GNU `find`, `locate`, `updatedb`, `xargs`, and `sed`, but
# `g`-prefixed.
brew 'findutils'
brew 'gnu-sed'

# Install more recent versions of some macOS tools.
brew 'grep'
brew 'openssh'
brew 'screen'

# Install the Pure prompt (https://github.com/sindresorhus/pure).
brew 'pure'

# Install CLI magic.
brew 'zoxide'
brew 'up'

# Install Git tools.
brew 'git'
brew 'git-extras'
brew 'git-delta'

# Install a Node version manager.
brew 'fnm'

# Install everything else.
brew 'the_silver_searcher'
brew 'rs/tap/curlie'
brew 'lynx'
brew 'rename'
brew 'tree'
brew 'wget'
brew 'trash'
brew 'mutt'
brew 'ddev'
